{
  "loopback-component-explorer": {
    "mountPath": "/explorer",
    "generateOperationScopedModels": true
  },
  "loopback-component-winston": {
    "level": "verbose",
    "transports": [
      {
        "type": "File",
        "name": "info-file",
        "filename": "info.log",
        "level": "info"
      },
      {
        "type": "File",
        "name": "error-file",
        "filename": "error.log",
        "level": "error"
      },
      {
        "type": "Console",
        "json": true
      }
    ]
  }
}